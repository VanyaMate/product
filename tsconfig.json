{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "$/*": [
                "./*"
            ],
        },
        "types": [
            "node",
            "jest",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "src",
        "vite",
        "declarations",
        "jest/jest-setup.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
